<!DOCTYPE html>
<html>
  <head>
    <title>TwitterClone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "navbar", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "tweet", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "_forms", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "_buttons", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "_colors", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "_utilities", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <% if flash.any? %>
      <%= render "shared/flashes"  %>
    <% end %>

    <% if user_signed_in? %>
      <% if controller_name == "usernames" %>
        <%= yield %>
      <% else %>
        <div class="container py-2">
          <div class="row">
            <%= render "shared/sidebar" %>
            <%= yield %>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= yield %>
    <% end %>
    
  </body>
</html>
